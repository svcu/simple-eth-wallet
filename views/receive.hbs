<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>jk</title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Amaranth">
    <link rel="stylesheet" href="/assets/css/Login-Form-Dark.css">
    <link rel="stylesheet" href="/assets/css/Navigation-with-Button.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
</head>

<style>
    #add{
        color: black;
        transition: 300ms;
    }

    #add:hover{
        color: #00ff29;
        transition: 300ms;
    }

    #private{
        color: white;
        transition: 300ms;
    }

    #private:hover{
        color: #00ff29;
        transition: 300ms;
    }

       #public{
        color: white;
        transition: 300ms;
    }

    #public:hover{
        color: #00ff29;
        transition: 300ms;
    }
</style>

<body>
    <section style="width: 100%;height: 100vh;">
        <h1 class="text-center" style="margin-top: 43px;" >Your ETH public address:</h1>
        <h1 class="text-center" style="margin-top: 40px;font-size: 31px;" id="add" onclick="copyAddress()">Heading</h1>
        <div class="container" style="height: 100vh;width: 100%;background-color: #eb1e1e;">
            <h1 class="text-center" style="margin: 44px;">THIS IS PRIVATE INFORMATION, YOU CANT SHARE IT WITH ANYBODY</h1>
            <div class="row">
                <div class="col d-flex justify-content-xl-center align-items-xl-center">
                    <h1  id="private" onclick="copyPrivate()">Private Key</h1>
                </div>
                <div class="col d-flex justify-content-xl-center align-items-xl-center">
                    <h1  id="public" onclick="copyPublic()">Public Key</h1>
                </div>
            </div>
            <div class="row" style="margin-top: 38px;">
                <div class="col d-flex justify-content-xl-center align-items-xl-center">
                    <h1 style="color: rgb(255,255,255);font-size: 22px;" id="private_key" ></h1>
                </div>
                <div class="col d-flex justify-content-xl-center align-items-xl-center">
                    <h1 style="color: rgb(255,255,255);font-size: 22px;" id="public_key" ></h1>
                </div>
            </div>
        </div>
    </section>
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script>
        document.getElementById("add").innerHTML =localStorage.getItem("address")

        let cp = navigator.clipboard;

        function copyAddress(){
             cp.writeText(document.getElementById("add").innerHTML).then(() => alert("Address copied"))
        }

        function copyPublic(){
             cp.writeText(localStorage.getItem("public")).then(() => alert("Public key copied"))
        }

        function copyPrivate(){
             cp.writeText(localStorage.getItem("private")).then(() => alert("Private key copied"))
        }
    </script>
</body>

</html>