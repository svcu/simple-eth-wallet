<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>jk</title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Amaranth">
    <link rel="stylesheet" href="/assets/css/Login-Form-Dark.css">
    <link rel="stylesheet" href="/assets/css/Navigation-with-Button.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
</head>

<body>

    

    <div class="login-dark" style="width: 100%;height: 100vh;">
        <form method="post" action="/user" method="POST">
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><img src="assets/img/pngwing.com.png"></div>


            <div class="form-group"><input class="form-control" type="email" name="email" id="email" placeholder="Email"></div>
            <div class="form-group"><input class="form-control" type="password" name="password" id="pwd" placeholder="Password"></div>
            <div class="form-group"><input class="hiden" type="hidden" name="address" id="a" placeholder="Password"></div>
            <div class="form-group"><input class="hiden" type="hidden" name="publick"  id="pu" placeholder="Password"></div>
            <div class="form-group"><input class="hiden" type="hidden" name="privatek" id="priv" placeholder="Password"></div>

               <script>
                     fetch("http://localhost:3000/generate_keys")
                         .then(response => response.json().then(data => {
                            const address = data.address;
                            const public = data.public;
                            const private = data.private;

                            document.getElementById("a").value = address;
                            document.getElementById("pu").value = public;
                            document.getElementById("priv").value = private;
                            alert("This is the mnemonic for your wallet, save it" + data.mem);
                         }))
                 </script>

        
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit" >Sign Up</button></div>

        </form>
    </div>
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>